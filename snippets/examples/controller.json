  "Create Controller with GET": {
    "prefix": "ep-example-controller",
    "body": [
      "const httpStatus = require('http-status')",
      "const ${1:item}sDB = require('../dbs/${1:item}s.db')",
      "",
      "",
      "/**",
      "* List ${1:item}",
      "* @public",
      "*/",
      "const list = async (req, res, next) => {",
      "try {",
      "const listed = await ${1:item}sDB.list({ ${1:item}id })",
      "if (!!listed) {",
      "res.status(httpStatus.OK).json({",
      "success: true,",
      "message: `${1:item}s listed`,",
      "body: listed",
      "})",
      "}",
      "res.status(httpStatus.NOT_FOUND).json({",
      "success: false,",
      "message: `${1:item}s not found`",
      "})",
      "} catch (error) {",
      "next(error)",
      "}",
      "}",
      "",
      "",
      "/**",
      "* Post ${1:item}",
      "* @public",
      "*/",
      "const post = async (req, res, next) => {",
      "try {",
      "const toCreated = req.body",
      "const created = await ${1:item}sDB.create(toCreated)",
      "if (!!created) {",
      "res.status(httpStatus.OK).json({",
      "success: true,",
      "message: `${1:item} created`,",
      "body: created",
      "})",
      "}",
      "res.status(httpStatus.NOT_FOUND).json({",
      "success: false,",
      "message: `${1:item} not created`",
      "})",
      "} catch (error) {",
      "next(error)",
      "}",
      "}",
      "",
      "",
      "/**",
      "* Put ${1:item}",
      "* @public",
      "*/",
      "const put = async (req, res, next) => {",
      "try {",
      "const toUpdate = req.body",
      "const updated = await ${1:item}sDB.update({ ${1:item}Id }, toUpdate)",
      "if (!!updated) {",
      "res.status(httpStatus.OK).json({",
      "success: true,",
      "message: `${1:item}s updated`,",
      "body: updated",
      "})",
      "}",
      "res.status(httpStatus.NOT_FOUND).json({",
      "success: false,",
      "message: `${1:item} not updated`",
      "})",
      "} catch (error) {",
      "next(error)",
      "}",
      "}",
      "",
      "",
      "/**",
      "* Delete ${1:item}",
      "* @public",
      "*/",
      "const delete${1:item} = async (req, res, next) => {",
      "try {",
      "const { ${1:item}id } = req.body",
      "const removed = await ${1:item}sDB.remove({ ${1:item}Id })",
      "if (!!removed) {",
      "res.status(httpStatus.OK).json({",
      "success: true,",
      "message: `${1:item}s removed`,",
      "body: removed",
      "})",
      "}",
      "res.status(httpStatus.NOT_FOUND).json({",
      "success: false,",
      "message: `${1:item} not removed`",
      "})",
      "} catch (error) {",
      "next(error)",
      "}",
      "}",
      "",
      "",
      "/**",
      "* Get ${1:item}",
      "* @public",
      "*/",
      "const get = async (req, res, next) => {",
      "try {",
      "const { ${1:item}id } = req.params",
      "const found = await ${1:item}sDB.find({ ${1:item}id })",
      "if (!!found) {",
      "res.status(httpStatus.OK).json({",
      "success: true,",
      "message: `${1:item} found`,",
      "body: found",
      "})",
      "}",
      "res.status(httpStatus.NOT_FOUND).json({",
      "success: false,",
      "message: `${1:item} not found`",
      "})",
      "} catch (error) {",
      "next(error)",
      "}",
      "}",
      "",
      "module.exports = {",
      "  list,",
      "  get,",
      "  put,",
      "  post,",
      "  delete${1:item}",
      "}\n$0"
