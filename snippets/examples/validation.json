{
  "Create Controller with GET": {
    "prefix": "ep-example-validation",
    "body": [
      "const Joi = require('joi')",
      "module.exports = {",
      "  /**",
      "   * LIST /v1/${1:item}s",
      "   */",
      "  list: {",
      "    query: Joi.object({",
      "      page: Joi.number().min(1),",
      "      limit: Joi.number().min(1).max(100)",
      "    })",
      "  },",
      "",
      "  /**",
      "   * POST /v1/${1:item}s",
      "   */",
      "  post: {",
      "    body: Joi.object({",
      "      confirm: Joi.boolean().valid(true).required()",
      "    }).required()",
      "  },",
      "",
      "  /**",
      "   * GET /v1/${1:item}s/:${1:item}id",
      "   */",
      "  get: {",
      "    params: Joi.object({",
      "      ${1:item}id: Joi.string().guid().required()",
      "    }).required()",
      "  },",
      "",
      "  /**",
      "   * PUT /v1/${1:item}s/:${1:item}id",
      "   */",
      "  put: {",
      "    params: Joi.object({",
      "      ${1:item}id: Joi.string().guid().required()",
      "    }).required(),",
      "    body: Joi.object().required()",
      "  },",
      "",
      "  /**",
      "   * PATCH /v1/${1:item}s/:${1:item}id",
      "   */",
      "  patch: {",
      "    params: Joi.object({",
      "      ${1:item}id: Joi.string().guid().required()",
      "    }).required(),",
      "    body: Joi.object().required()",
      "  },",
      "",
      "  /**",
      "   * DELETE /v1/${1:item}s/${1:item}id",
      "   */",
      "  remove: {",
      "    params: Joi.object({",
      "      ${1:item}id: Joi.string().guid().required()",
      "    }).required(),",
      "  },",
      "}\n$0"
    ],
    "description": "Create an '*.validation.js' file content, importing Joi"
  }
}
